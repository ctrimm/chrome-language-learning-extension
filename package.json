{
  "name": "aprendendo-language-learning-chrome-extension",
  "version": "1.0.0",
  "description": "Learn a new language with this chrome extension.",
  "scripts": {
    "prettier": "npx prettier **/*.{md,html,json} -w",
    "lint": "eslint **/*.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoogleChrome/chrome-extensions-samples.git"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "language-learning",
    "portuguese"
  ],
  "author": "Cory Trimm",
  "devDependencies": {
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4"
  },
  "lint-staged": {
    "**/*.js": [
      "npx eslint --fix"
    ],
    "**/*.{md,html,json}": [
      "npx prettier --write"
    ]
  }
}
